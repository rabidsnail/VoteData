<script type="text/javascript">
/* <![CDATA[ */

  function calculateTotal() {
		var total = 0;
	 var configTotal = 0;
	       
	       for (i = 0; i < theForm.tax.length; i++) {
	               if(theForm.tax[i].checked){
	                       configTotal = configTotal + parseFloat(theForm.tax[i].value); 
	               }
	       }
	      for (i = 0; i < theForm.save.length; i++) {
	               if(theForm.save[i].checked){
	                       configTotal = configTotal + parseFloat(theForm.save[i].value);
	               }
	      }
	      for (i = 0; i < theForm.reform.length; i++) {
	               if(theForm.reform[i].checked){
	                       configTotal = configTotal + parseFloat(theForm.reform[i].value);
	               }
	      }
	      
	      for (i = 0; i < theForm.party.length; i++) {
	               if(theForm.party[i].checked){
	                       configTotal = configTotal + parseFloat(theForm.party[i].value);
	               }
	      }
	  	       
	total = configTotal;
	
	document.getElementById("totalpricebox").innerHTML = "You rank" + total + "out of 20 for fiscal conservatism! These senators vote towards fiscally conservative legislation as well!";
}
	
/* ]]> */
</script>
